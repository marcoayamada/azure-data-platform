{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseUrl": { "type": "string" },
    "baseLinkedTemplateName": { "type": "string" },
    "datalakeName": { "type": "string" },
    "ehName": { "type": "string" }
  },
  "variables": {
    "datalakeTemplateLink": "[concat(parameters('baseUrl'), 'storage/', parameters('baseLinkedTemplateName'))]",
    "eventhubTemplateLink": "[concat(parameters('baseUrl'), 'eventhub/', parameters('baseLinkedTemplateName'))]"
  },
  "resources": [
    {
      "name": "Storage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('datalakeTemplateLink')]"
        },
        "parameters": {
          "accountName": { "value": "[concat('false', uniqueString(resourceGroup().id))]" },
          "datalakeName": { "value": "[parameters('datalakeName')]" }
        }
      }
    },
    {
      "name": "EventHub",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('eventhubTemplateLink')]"
        },
        "parameters": {
          "ehNamespaceName": { "value": "[concat('false', uniqueString(resourceGroup().id))]" },
          "ehName": { "value": "[parameters('ehName')]" },
          "StorageAccountName": { "value": "[reference('Storage').outputs.datalakeReturn.value.storageLinked.accountName]" },
          "datalakeName": { "value": "[reference('Storage').outputs.datalakeReturn.value.storageLinked.blobName]" }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'Storage')]"
      ]
    }
  ],
  "outputs": {
    "datalakeReturn": {
      "type": "object",
      "value": "[reference('Storage').outputs.storageLinked]"
    }
  }
}