{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseUrl": { "type": "string" },
    "baseLinkedTemplateName": {"type": "string"}, 
    "baseLinkedParametersName": {"type": "string"},
    "resourceName": { "type": "string" },
    "pathBlob": { "type": "string" }
  },
  "variables": {
    "blobTemplateLink": "[concat(parameters('baseUrl'), parameters('pathBlob'), parameters('baseLinkedTemplateName'))]",
    "blobParametersLink": "[concat(parameters('baseUrl'), parameters('pathBlob'), parameters('baseLinkedParametersName'))]"
  },
  "resources": [
    {
      "name": "[parameters('resourceName')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('blobTemplateLink')]"
        },
        "parametersLink": {
          "uri": "[variables('blobParametersLink')]"
        }
      }
    }
  ],
  "outputs": {
    "datalakeReturn": { "type": "object", "value": "[reference('datalake').outputs.storageLinked]"
    }
  }
}