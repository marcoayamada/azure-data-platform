{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseUrl": { "type": "string" },
    "baseLinkedTemplateName": {"type": "string"},
    
    "resourceName": { "type": "string" },
    "datalakeName": { "type": "string" }
  },
  "variables": {
    "blobTemplateLink": "[concat(parameters('baseUrl'), 'storage/', parameters('baseLinkedTemplateName'))]"
  },
  "resources": [
    {
      "name": "Storage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('blobTemplateLink')]"
        },
        "parameters": {
          "datalakeName": {"value": "[parameters('datalakeName')]"}
        }
      }
    }
  ],
  "outputs": {
    "datalakeReturn": { "type": "object", "value": "[reference(parameters('resourceName')).outputs.storageLinked]" }
  }
}