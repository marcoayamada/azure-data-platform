{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": { "type": "string", "defaultValue": "[resourceGroup().location]" },
        "ehNamespaceName": { "type": "string" , "defaultValue": "[variables('EhNamespaceName')]" },
        "ehName": { "type": "string" },
        "StorageAccountName": { "type": "string" },
        "datalakeName": { "type": "string" }
    },
    "functions": [],
    "variables": {
        "EhNamespaceName": "[uniqueString(resourceGroup().id)]"
    },
    "resources": [
        {
            "type": "Microsoft.EventHub/namespaces",
            "apiVersion": "2017-04-01",
            "name": "[parameters('EhNamespaceName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 1
            },
            "properties": {
                "isAutoInflateEnabled": false
            }
        },
        {
            "apiVersion": "2017-04-01",
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "name": "[concat(parameters('EhNamespaceName'), '/', parameters('ehName'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('EhNamespaceName'))]"
            ],
            "properties": {
                "status": "Active",
                "messageRetentionInDays": 7,
                "partitionCount": 1,
                "captureDescription": {
                    "enabled": true,
                    "encoding": "Avro",
                    "intervalInSeconds": 120,
                    "sizeLimitInBytes": 10485760,
                    "skipEmptyArchives": true,
                    "destination": {
                        "name": "EventHubArchive.AzureBlockBlob",
                        "properties": {
                            "storageAccountResourceId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('StorageAccountName'))]",
                            "blobContainer": "[parameters('datalakeName')]",
                            "archiveNameFormat": "{Namespace}/{EventHub}/{PartitionId}/{Year}/{Month}/{Day}/{Hour}/{Minute}/{Second}"
                        }
                    }
                }
            }
        }

    ],
    "outputs": {}
}